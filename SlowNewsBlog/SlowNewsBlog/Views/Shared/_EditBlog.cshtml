@model SlowNewsBlog.Models.Tables.BlogPost


<div class="blog-post">
    @using (Html.BeginForm("EditBlog", "BlogPost", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.HiddenFor(m => m.BlogPostId)
        <div class="form-group">
            @Html.TextAreaFor(m => m.Title, new { @class = "textarea", id = "mytitle" })
            @Html.TextAreaFor(m => m.Blog, new { @class = "textarea", id = "mytextarea" })
        </div>
        <div class="form-group">

            <input class="btn btn-success" type="submit" value="save" />
        </div>
    }
</div>