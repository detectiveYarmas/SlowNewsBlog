@model SlowNewsBlog.Models.EditHashTagViewModel

@{
    ViewBag.Title = "EditHashTag";
}

<h2>EditHashTag</h2>

@using (Html.BeginForm("EditHashTag", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger"})
    <div class="form-group">
        @Html.LabelFor(m => m.HashTag.HashTagName, new { @class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.HashTag.HashTagName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.HashTag.Approved, new { @class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.HashTag.Approved, new { @class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(m => m.HashTag.HashTagId, new { @class = "form-control"})
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Save"/>
        </div>
    </div>
}

